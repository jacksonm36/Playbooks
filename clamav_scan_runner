---
- name: Update ClamAV and scan system paths
  hosts: docker_hosts
  become: true
  gather_facts: yes

  vars:
    scan_paths:
      - /opt
      - /etc
      - /var/tmp
      - /usr/local/bin
      - /home

  tasks:
    - name: Stop freshclam daemon if running
      service:
        name: clamav-freshclam
        state: stopped
      ignore_errors: true
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]

    - name: Update virus signature database
      command: freshclam
      register: freshclam_output
      changed_when: "'updated' in freshclam_output.stdout or 'bytecode.cvd' in freshclam_output.stdout"
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]

    - name: Show freshclam output
      debug:
        var: freshclam_output.stdout
      when: freshclam_output is defined

    - name: Run ClamAV scan on each path
      command: clamscan -r "{{ item }}"
      register: scan_results
      failed_when: scan_results.rc != 0 and scan_results.rc != 1
      loop: "{{ scan_paths }}"
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]
      ignore_errors: true

    - name: Process scan results
      debug:
        msg: |
          === Scan Result for {{ scan_paths[ansible_loop.index0] }} ===
          Exit Code: {{ item.rc }}
          {% if item.rc == 0 %}
          Status: CLEAN - No threats found
          {% elif item.rc == 1 %}
          Status: INFECTED - Threats detected!
          {% else %}
          Status: ERROR - Scan failed
          {% endif %}
          {% if item.stdout %}
          Output: {{ item.stdout_lines[-1] if item.stdout_lines else item.stdout }}
          {% endif %}
      loop: "{{ scan_results.results }}"
      loop_control:
        label: "{{ scan_paths[ansible_loop.index0] }}"

    - name: Generate scan summary
      debug:
        msg: |
          === SCAN SUMMARY ===
          Total paths scanned: {{ scan_results.results | length }}
          Clean paths: {{ (scan_results.results | selectattr('rc', 'equalto', 0) | list | length) }}
          Infected paths: {{ (scan_results.results | selectattr('rc', 'equalto', 1) | list | length) }}
          Failed scans: {{ (scan_results.results | selectattr('rc', 'gt', 1) | list | length) }}

    - name: Fail if infections found
      fail:
        msg: "Virus scan detected infected files in {{ (scan_results.results | selectattr('rc', 'equalto', 1) | list | length) }} path(s)"
      when: (scan_results.results | selectattr('rc', 'equalto', 1) | list | length) > 0

    - name: Start freshclam daemon
      service:
        name: clamav-freshclam
        state: started
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]
