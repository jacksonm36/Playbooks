---
- name: Update ClamAV and scan system paths
  hosts: docker_hosts
  become: true
  gather_facts: yes

  vars:
    scan_paths:
      - /opt
      - /etc
      - /var/tmp
      - /usr/local/bin
      - /home

  tasks:
    - name: Stop freshclam daemon if running
      service:
        name: clamav-freshclam
        state: stopped
      ignore_errors: true
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]

    - name: Update virus signature database
      command: freshclam
      register: freshclam_output
      changed_when: "'updated' in freshclam_output.stdout or 'bytecode.cvd' in freshclam_output.stdout"
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]

    - name: Show freshclam output
      debug:
        var: freshclam_output.stdout
      when: freshclam_output is defined

    - name: Run ClamAV scan on each path
      command: clamscan -r --max-filesize=100M --max-scansize=200M "{{ item }}"
      register: scan_results
      failed_when: scan_results.rc > 1  # Only fail on actual errors, not infections
      loop: "{{ scan_paths }}"
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]
      ignore_errors: true

    - name: Display scan results with path names
      debug:
        msg: |
          === Scan Result for {{ scan_paths[loop_index0] }} ===
          Exit Code: {{ item.rc }}
          {% if item.rc == 0 %}
          Status: CLEAN - No threats found
          {% elif item.rc == 1 %}
          Status: INFECTED - Threats detected!
          {% else %}
          Status: ERROR - Scan failed (code: {{ item.rc }})
          {% endif %}
          {% if item.stdout %}
          Summary: {{ item.stdout_lines[-1] if item.stdout_lines else item.stdout | trim }}
          {% endif %}
      loop: "{{ scan_results.results }}"
      loop_control:
        label: "{{ scan_paths[loop_index0] }}"
        index_var: loop_index

    - name: Generate scan summary
      set_fact:
        clean_count: "{{ (scan_results.results | selectattr('rc', 'equalto', 0) | list | length) }}"
        infected_count: "{{ (scan_results.results | selectattr('rc', 'equalto', 1) | list | length) }}"
        error_count: "{{ (scan_results.results | selectattr('rc', 'gt', 1) | list | length) }}"

    - name: Show final summary
      debug:
        msg: |
          === FINAL SCAN SUMMARY ===
          Total paths scanned: {{ scan_results.results | length }}
          Clean paths: {{ clean_count }}
          Infected paths: {{ infected_count }}
          Failed scans: {{ error_count }}
          {% if infected_count > 0 %}
          SECURITY ALERT: Infections detected!
          {% else %}
          SECURITY STATUS: All paths clean
          {% endif %}

    - name: List infected paths
      debug:
        msg: "INFECTED: {{ scan_paths[item.0] }}"
      with_indexed_items: "{{ scan_results.results }}"
      when: item.1.rc == 1

    - name: List failed scans
      debug:
        msg: "FAILED: {{ scan_paths[item.0] }} (Error code: {{ item.1.rc }})"
      with_indexed_items: "{{ scan_results.results }}"
      when: item.1.rc > 1

    - name: Fail playbook if infections found
      fail:
        msg: "VIRUS SCAN ALERT: Infected files detected in {{ infected_count }} path(s). Immediate action required!"
      when: infected_count | int > 0

    - name: Start freshclam daemon
      service:
        name: clamav-freshclam
        state: started
      when: ansible_os_family in ["Debian", "RedHat", "Archlinux"]

    - name: Final success message
      debug:
        msg: "ClamAV scan completed successfully. All {{ scan_results.results | length }} paths are clean."
      when: 
        - infected_count | int == 0
        - error_count | int == 0
